# ============================================
# ENVIRONMENT CONFIGURATION
# File: .env
# Copy this to .env and fill in your values
# ============================================

# ============================================
# NODE.JS APPLICATION
# ============================================
NODE_ENV=production
PORT=3000
SITE_URL=https://instaminsta.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_NAME=instaminsta_db
DB_PORT=3306

# ============================================
# API SECURITY
# Generate a secure random key:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ============================================
BLOG_API_KEY=your_super_secure_api_key_here_64_characters_minimum_for_security

# ============================================
# OPENAI API CONFIGURATION
# Get your API key from: https://platform.openai.com/api-keys
# ============================================
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o
OPENAI_MODEL_HUMANIZE=gpt-4o-mini

# ============================================
# PLAGIARISM CHECK API (Copyleaks)
# Get API key from: https://copyleaks.com/
# Alternative: Copyscape, PlagScan, Grammarly
# ============================================
COPYLEAKS_API_KEY=your_copyleaks_api_key
COPYLEAKS_EMAIL=your_email@domain.com

# Alternative Plagiarism APIs:
# COPYSCAPE_API_KEY=your_copyscape_key
# COPYSCAPE_USERNAME=your_username

# ============================================
# N8N CONFIGURATION
# ============================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_WEBHOOK_URL=https://your-domain.com/webhook

# ============================================
# EMAIL NOTIFICATIONS (Optional)
# For error alerts and daily reports
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=admin@instaminsta.com

# ============================================
# GOOGLE SEARCH CONSOLE (Optional)
# For automatic sitemap submission
# ============================================
GOOGLE_SEARCH_CONSOLE_SITE_URL=https://instaminsta.com/
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# RATE LIMITING
# ============================================
MAX_POSTS_PER_DAY=3
MIN_WORD_COUNT=1200
MAX_WORD_COUNT=1800
PLAGIARISM_THRESHOLD=10

# ============================================
# CONTENT GENERATION SETTINGS
# ============================================
AI_TEMPERATURE=0.85
AI_HUMANIZE_TEMPERATURE=0.75
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/instaminsta/blog-automation.log

# ============================================
# BACKUP (Optional)
# ============================================
BACKUP_ENABLED=true
BACKUP_PATH=/backups/instaminsta
BACKUP_SCHEDULE=0 2 * * *

# ============================================
# SECURITY HEADERS
# ============================================
ENABLE_CORS=false
ALLOWED_ORIGINS=https://instaminsta.com,https://www.instaminsta.com
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
